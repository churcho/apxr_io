<tr>
  <td><a href="<%= path_for_experiment(@project, @experiment)%>"><%= @experiment.release.version %></a></td>
  <td><%= text_length(@experiment.description, 50) %></td>
  <td><%= if @experiment.meta.progress, do: @experiment.meta.progress, else: "in_progress" %></td>
  <td><%= if @experiment.meta.started, do: inspect Jason.decode!(@experiment.meta.started), else: pretty_datetime(@experiment.inserted_at) %></td>
  <td><%= if @experiment.meta.completed, do: inspect Jason.decode!(@experiment.meta.completed) %></td>
  <td><%= @experiment.meta.duration %></td>
  <td><%= @experiment.meta.total_runs %></td>
</tr>